{
  "manifest_version": 3,
  "name": "YouTube PiP",
  "version": "1.0.0",
  "description": "Picture-in-Picture for YouTube â€” works even outside Chrome. Adds a PiP button to the YouTube player controls.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-pip": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "Toggle Picture-in-Picture"
    }
  }
}
